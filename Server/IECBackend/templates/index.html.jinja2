<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Power Station Frontend</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        body {
            background-image: url("static/img/power_plant.jpg");
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .card-wrapper {
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.5);
            border: 1px solid black;
        }

        .dot {
            height: 25px;
            width: 25px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
        }

        p {
            margin: 10px 0;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="col-lg-12 text-center">
        <h1>Power Station Simulator (Server)</h1>
    </div>
    {% for key in data.keys() %}
        <div class="col-lg-3 card-wrapper">
            <div class="col-lg-10">
                <p>Station: {{ key }}<br>
                    {% if data[key] >= 0 %}
                        Value: {{ data[key] }}
                    {% else %}
                        Value: {{ data[key] }}
                    {% endif %}
                </p>
            </div>
            <div class="col-lg-2">
                <span class="dot"></span>
            </div>
        </div>
    {% endfor %}
</div>
<script>
    function alignStatusCircles() {
        let innerHeight = (document.getElementsByClassName("card-wrapper")[0].clientHeight - 25) / 2;
        let elements = document.getElementsByClassName("dot");
        for (let i = 0; i < elements.length; i++) {
            elements[i].style.marginTop = innerHeight + "px";
            elements[i].style.background = "green";
        }
    }

    alignStatusCircles();
</script>
</body>
</html>
